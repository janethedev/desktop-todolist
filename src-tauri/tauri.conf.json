{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "QuickTask",
  "version": "1.0.0-beta.3",
  "identifier": "com.janethedev.quicktask",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build"
  },
  "app": {
    "windows": [
      {
        "title": "QuickTask",
        "width": 320,
        "height": 380,
        "minWidth": 300,
        "minHeight": 360,
        "resizable": true,
        "decorations": false,
        "backgroundColor": "#FFFFFF",
        "alwaysOnTop": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
